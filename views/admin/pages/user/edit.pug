extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main 
    if(role.permissions.includes('users_edit'))
        +alert-error("3000")
        +alert-success("3000")  

        div(class="account-detail-container")
            h1(class="mb-4") Chỉnh sửa tài khoản

            form(
                action=`${prefixAdmin}/users/edit/${data.id}?_method=PATCH`
                method="POST"
                enctype="multipart/form-data"
                class="account-edit-form"
            )
                div(class="form-group")
                    label(for="fullName") Họ tên *
                    input(
                        type="text"
                        class="form-control"
                        id="fullName"
                        name="fullName"
                        value=data.fullName
                    )
                
                div(class="form-group")
                    label(for="email") Email *
                    input(
                        type="text"
                        class="form-control"
                        id="email"
                        name="email"
                        value=data.email
                    )
                
                div(class="form-group")
                    label(for="password") Mật khẩu *
                    input(
                        type="password"
                        class="form-control"
                        id="password"
                        name="password"
                        placeholder="Nhập mật khẩu mới"
                    )
                
                div(class="form-group")
                    label(for="phone") Số điện thoại 
                    input(
                        type="text"
                        class="form-control"
                        id="phone"
                        name="phone"
                        value=data.phone
                    )

                div(
                    class="form-group avatar-section"
                    upload-image
                )
                    label(for="avatar") Avatar
                    input(
                        type="file"
                        class="form-control"
                        id="avatar"
                        name="avatar"
                        accept="image/*"
                        upload-image-input
                    )
                    div(class="mt-3 d-flex align-items-center")
                        span(
                            close-image 
                            class="badge badge-danger text-white p-2 ms-2"
                            role="button"
                        ) Xóa ảnh
                        img(
                            src=data.avatar ? data.avatar : ""
                            upload-image-preview
                            class="image-preview ms-3"
                        )

                div(class="status-section")
                    span(class="status-label me-3") Trạng thái:
                    div(class="form-group form-check form-check-inline mb-0")
                        input(
                            type="radio"
                            class="form-check-input"
                            id="statusActive"
                            name="status"
                            value="active"
                            checked=(data.status === "active")
                        )
                        label(for="statusActive" class="form-check-label") Hoạt động
                    
                    div(class="form-group form-check form-check-inline mb-0")
                        input(
                            type="radio"
                            class="form-check-input"
                            id="statusInactive"
                            name="status"
                            value="inactive"
                            checked=(data.status === "inactive")
                        )
                        label(for="statusInactive" class="form-check-label") Dừng hoạt động
                
                div(class="action-buttons")
                    button(
                        type="submit"
                        class="btn btn-warning"
                    ) Cập nhật
                    a(
                        href=`${prefixAdmin}/users`
                        class="btn btn-secondary"
                    ) Quay lại
